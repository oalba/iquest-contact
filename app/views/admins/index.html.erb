<table align="center" class="table table-hover table-bordered">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Username</th>
		<th>Email</th>
		<th colspan="3">Action</th>
		<th><%= link_to 'New', new_admin_path %></th>
	</tr>

	<% @admins.each do |admin| %>
		<tr>
			<td><%= admin.id %></td>
			<td><%= admin.name %></td>
			<td><%= admin.username %></td>
			<td><%= admin.email %></td>
			<td><%= link_to 'Show', admin_path(admin) %></td>
			<td><%= link_to 'Edit', edit_admin_path(admin) %></td>
			<td><%= link_to 'Delete', admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>