<div class="row">
  <div class="col-lg-offset-4 col-lg-4">
<%= form_for :admin, url: admins_path do |f| %>
<h2>New admin</h2>
  <%= f.label :name %><%= f.text_field :name, :class => 'form-control' %>
  <%= f.label :username %><%= f.text_field :username, :class => 'form-control' %>
  <%= f.label :email %><%= f.email_field :email, :class => 'form-control' %>
  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
  <!-- <% if @minimum_password_length %> -->
    <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
  <!-- <% end %> -->
  <%= f.label :password_confirmation %><%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
  <br>
  <p>
    <%= f.submit "Save", :class => 'btn btn-lg btn-primary btn-block' %>
  </p>
<% end %>
<!--<%= link_to 'Back', admins_path %>-->
</div>
</div>